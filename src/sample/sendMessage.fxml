<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SendMessage">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane fx:id="pnMessage" prefHeight="500.0" prefWidth="650.0">
            <children>
                <Button fx:id="btnLogout" layoutX="570.0" layoutY="20.0" mnemonicParsing="false" onAction="#logout" prefHeight="25.0" prefWidth="60.0" text="Log out" />
                <TextField fx:id="txtfldTo" layoutX="100.0" layoutY="75.0" prefHeight="25.0" prefWidth="450.0" promptText="To:" />
                <TextArea fx:id="areaMessage" layoutX="100.0" layoutY="110.0" prefHeight="300.0" prefWidth="450.0" promptText="Message:" />
                <Button fx:id="btnSend" layoutX="450.0" layoutY="420.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="30.0" prefWidth="100.0" text="Send message" />
            </children></Pane>
    </children>
</GridPane>
